
var Paire p;
var Paire pt;
var Triple t;

class Paire {
  attribute int x;
  attribute int y;

  method void constructor(int x, int y) {
    this.x = x;
    this.y = y;
  }

  method int somme() {
    return this.x + this.y;
  }
  method int diff() {
    return this.x - this.y;
  }
}

class Triple extends Paire {
  attribute int z;

  method void constructor(int x, int y, int z) {
    this.x = x;
    this.y = y;
    this.z = z;
  }

  method int somme() {
    return this.x + this.y + this.z;
  }

  method int produit() {
    return this.x * this.y * this.z;
  }
}

main {
  p = new Paire(1, 2);
  t = new Triple(3, 4, 5);
  print(p.somme());
  print(t.somme());
  print(t.diff());
  print(t.produit());
  pt = new Triple(1, 2,3);
  print(pt.somme());
  // affiche 3, puis 12, puis -1, puis 60, puis 6.
}
